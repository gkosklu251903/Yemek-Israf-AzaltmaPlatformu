<script>
const searchInput = document.getElementById('searchInput');
const cards = document.querySelectorAll('.card');
const checkboxes = document.querySelectorAll('.status-check');
const tumCheckbox = document.querySelector('input[value="tum"]');

function applyFilters() {
  const query = searchInput.value.toLowerCase();
  const selectedStatuses = Array.from(checkboxes)
    .filter(cb => cb.checked)
    .map(cb => cb.value);

  cards.forEach(card => {
    const food = card.dataset.food.toLowerCase();
    const restaurant = card.dataset.restaurant.toLowerCase();
    const status = card.dataset.status.toLowerCase();
    const matchesSearch = food.includes(query) || restaurant.includes(query);
    const matchesFilter = selectedStatuses.includes('tum') || selectedStatuses.includes(status);
    card.style.display = (matchesSearch && matchesFilter) ? '' : 'none';
  });
}

checkboxes.forEach(cb => {
  cb.addEventListener('change', () => {
    if (cb.value === 'tum' && cb.checked) checkboxes.forEach(other => { if (other.value !== 'tum') other.checked = false; });
    else if (cb.value !== 'tum' && cb.checked) tumCheckbox.checked = false;
    else if (!Array.from(checkboxes).some(c => c.checked)) tumCheckbox.checked = true;
    applyFilters();
  });
});

searchInput.addEventListener('input', applyFilters);
applyFilters();

const modal = document.getElementById('detailModal');
const foodImg = document.getElementById('foodImg');
const foodName = document.getElementById('foodName');
const restaurantName = document.getElementById('restaurantName');
const distance = document.getElementById('distance');
const time = document.getElementById('time');

function closeModal() {
  modal.style.display = 'none';
}

function showRatingModal(foodId) {
  const ratingModal = document.getElementById('ratingModal');
  ratingModal.style.display = 'flex';
  let selectedRating = 0;
  const stars = ratingModal.querySelectorAll('.star');
  stars.forEach(star => {
    star.addEventListener('click', () => {
      selectedRating = parseInt(star.dataset.value);
      stars.forEach(s => s.style.opacity = parseInt(s.dataset.value) <= selectedRating ? '1' : '0.3');
    });
  });
  document.getElementById('submitRating').onclick = () => {
    if (selectedRating > 0) {
      // Admin paneli iÃ§in yorumu kaydet
      const commentText = document.getElementById('ratingComment').value;
      const reviews = JSON.parse(localStorage.getItem('foodReviews') || '[]');
      const card = document.querySelector(`.card[data-id="${foodId}"]`);
      const foodName = card ? card.dataset.food : 'Bilinmeyen Yemek';
      const currentUser = localStorage.getItem('currentUserEmail') || 'Anonim';

      reviews.push({
          user: currentUser,
          food: foodName,
          rating: selectedRating,
          comment: commentText,
          date: new Date().toLocaleString('tr-TR')
      });
      localStorage.setItem('foodReviews', JSON.stringify(reviews));

      fetch('/add-review', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams({
          food_id: foodId,
          rating: selectedRating,
          comment: document.getElementById('ratingComment').value
        })
      }).then(response => response.text()).then(result => {
        alert(result);
        closeRatingModal();
      });
    } else {
      alert('LÃ¼tfen puan verin.');
    }
  };
}

function closeRatingModal() {
  document.getElementById('ratingModal').style.display = 'none';
}

cards.forEach(card => {
  const button = card.querySelector('.hemen-al-btn');
  const status = card.dataset.status;
  const foodId = card.dataset.id;

  // LocalStorage kontrolÃ¼ (Sayfa yenilendiÄŸinde hatÄ±rlamasÄ± iÃ§in)
  const currentUserEmail = localStorage.getItem('currentUserEmail');
  const storageKey = currentUserEmail ? `takenFoods_${currentUserEmail}` : 'takenFoods';
  const takenFoods = JSON.parse(localStorage.getItem(storageKey) || '[]');
  if (takenFoods.includes(foodId)) {
    button.disabled = true;
    card.dataset.status = 'alindi';
    // Update badge style for 'alindi'
    card.querySelector('.badge').className = 'bg-slate-500/90 backdrop-blur-sm text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg flex items-center gap-1 badge alindi';
    card.querySelector('.badge').textContent = 'AlÄ±ndÄ±';
    card.querySelector('.status-text').textContent = 'AlÄ±ndÄ±';
    const timer = card.querySelector('.countdown-timer');
    if (timer) {
      const wrapper = timer.closest('.absolute.bottom-4');
      if (wrapper) wrapper.remove();
      else timer.remove();
    }
  } else {
    const timer = card.querySelector('.countdown-timer');
    const seconds = timer ? parseInt(timer.dataset.seconds) : 0;
    button.disabled = status !== 'hazir' || seconds > 0;
  }

  button.addEventListener('click', (e) => {
    if(!button.disabled){
      e.preventDefault(); // Formun sayfayÄ± yenilemesini engelle

      foodImg.src = card.querySelector('img').src;
      foodName.textContent = card.dataset.english;
      restaurantName.textContent = 'Restoran: ' + card.dataset.restaurant;
      distance.textContent = card.querySelector('.location-val').textContent.trim();
      time.textContent = card.querySelector('.time-val').textContent.trim();
      
      // Random 4 haneli PIN oluÅŸtur
      const pinCode = Math.floor(1000 + Math.random() * 9000);
      const pinDisplay = document.getElementById('pinCodeDisplay');
      if(pinDisplay) pinDisplay.textContent = pinCode;

      modal.style.display = 'flex';

      const successMsg = document.getElementById('successMessage');
      if(successMsg) {
          successMsg.classList.remove('hidden');
          void successMsg.offsetWidth; // Trigger reflow
          successMsg.classList.remove('translate-y-4', 'opacity-0');
      }

      setTimeout(() => {
        if(successMsg) {
            successMsg.classList.add('translate-y-4', 'opacity-0');
            setTimeout(() => successMsg.classList.add('hidden'), 500);
        }
        // Puanlama modal'Ä± aÃ§
        showRatingModal(card.dataset.id);
      }, 3000);

      button.disabled = true;
      card.dataset.status = 'alindi';
      
      // KartÄ± otomatik sil (Fade-out efekti ile)
      setTimeout(() => {
          card.style.transition = 'all 0.5s ease';
          card.style.opacity = '0';
          card.style.transform = 'scale(0.9)';
          setTimeout(() => {
              card.remove();
              // EÄŸer hiÃ§ kart kalmadÄ±ysa bilgi mesajÄ± gÃ¶sterilebilir (Opsiyonel)
              if (document.querySelectorAll('.card').length === 0) {
                  const container = document.getElementById('foodContainer');
                  if(container) container.innerHTML = '<div class="col-span-full text-center text-slate-500 dark:text-slate-400 py-10">GÃ¶sterilecek yemek kalmadÄ±.</div>';
              }
          }, 500);
      }, 500); // KullanÄ±cÄ± butona bastÄ±ktan hemen sonra iÅŸlem baÅŸlasÄ±n

      const timer = card.querySelector('.countdown-timer');
      if (timer) {
        const wrapper = timer.closest('.absolute.bottom-4');
        if (wrapper) wrapper.remove();
        else timer.remove();
      }

      // LocalStorage'a kaydet
      const currentUserEmail = localStorage.getItem('currentUserEmail');
      const storageKey = currentUserEmail ? `takenFoods_${currentUserEmail}` : 'takenFoods';
      const currentTaken = JSON.parse(localStorage.getItem(storageKey) || '[]');
      if (foodId && !currentTaken.includes(foodId)) {
        currentTaken.push(foodId);
        localStorage.setItem(storageKey, JSON.stringify(currentTaken));
      }

      // Admin paneli iÃ§in iÅŸlem kaydÄ± (KullanÄ±cÄ± Ä°ÅŸlemleri)
      const currentUser = localStorage.getItem('currentUserEmail') || 'Misafir KullanÄ±cÄ±';
      const claims = JSON.parse(localStorage.getItem('foodClaims') || '[]');
      claims.push({
          user: currentUser,
          food: card.dataset.food,
          date: new Date().toLocaleString('tr-TR'),
          pin: pinCode
      });
      localStorage.setItem('foodClaims', JSON.stringify(claims));

      // Yemek verenler sayfasÄ± iÃ§in porsiyon azaltma sinyali gÃ¶nder
      localStorage.setItem('food_update_signal', JSON.stringify({
          id: foodId,
          timestamp: Date.now()
      }));

      // Sunucuya isteÄŸi gÃ¶nder
      fetch('/take-food', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: `id=${encodeURIComponent(foodId)}&miktar=1`
      }).catch(err => console.error(err));
    }
  });
});

// Sayfa yÃ¼klendiÄŸinde sayaÃ§larÄ± localStorage ile senkronize et
document.querySelectorAll('.countdown-timer').forEach(el => {
    const card = el.closest('.card');
    if (!card) return;
    const foodId = card.dataset.id;
    const storageKey = 'timer_end_' + foodId;
    
    let endTime = localStorage.getItem(storageKey);
    let seconds = parseInt(el.dataset.seconds);

    if (!endTime) {
        endTime = Date.now() + (seconds * 1000);
        localStorage.setItem(storageKey, endTime);
    } else {
        const remaining = Math.ceil((parseInt(endTime) - Date.now()) / 1000);
        seconds = remaining > 0 ? remaining : 0;
        el.dataset.seconds = seconds;
    }
    
    // Check if expired immediately on load
    if (seconds <= 0 && card.dataset.status !== 'alindi') {
         el.innerHTML = '<span class="material-icons-round text-sm">check_circle</span> HazÄ±r!';
         const btn = card.querySelector('.hemen-al-btn');
         if (btn) btn.disabled = false;
         
         const badge = card.querySelector('.badge');
         if (badge) {
             badge.className = 'bg-secondary/90 backdrop-blur-sm text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg flex items-center gap-1 badge hazir';
             badge.innerHTML = '<span class="w-2 h-2 rounded-full bg-white animate-pulse"></span> HazÄ±r';
         }
         
         const statusText = card.querySelector('.status-text');
         if(statusText) statusText.textContent = 'Hemen AlÄ±nabilir';
    } else if (seconds > 0) {
        const m = Math.floor(seconds / 60);
        if (el.querySelector('.time-display')) {
             el.querySelector('.time-display').innerText = `${m}dk ${seconds % 60}sn`;
        }
    }
});

// Geri SayÄ±m SayacÄ± MantÄ±ÄŸÄ±
setInterval(() => {
    document.querySelectorAll('.countdown-timer').forEach(el => {
        let seconds = parseInt(el.dataset.seconds);
        
        if (seconds > 0) {
            seconds--;
            el.dataset.seconds = seconds;
            
            if (seconds <= 0) {
                // SÃ¼re dolduÄŸunda
                el.innerHTML = '<span class="material-icons-round text-sm">check_circle</span> HazÄ±r!';
                el.classList.remove('bg-slate-900/80');
                el.classList.add('bg-emerald-600');
                
                // SayacÄ± biten kartÄ±n butonunu aktif et
                const card = el.closest('.card');
                if (card) {
                    const btn = card.querySelector('.hemen-al-btn');
                    // EÄŸer buton daha Ã¶nce alÄ±nmamÄ±ÅŸsa (disabled ve status alindi deÄŸilse) aktif et
                    if (btn && btn.disabled && card.dataset.status !== 'alindi') {
                        btn.disabled = false;
                        card.dataset.status = 'hazir';
                        
                        // Durum metnini gÃ¼ncelle
                        const statusText = card.querySelector('.status-text');
                        if (statusText) statusText.textContent = 'Hemen AlÄ±nabilir';
                        
                        // Rozeti gÃ¼ncelle
                        const badge = card.querySelector('.badge');
                        if (badge) {
                            badge.className = 'bg-secondary/90 backdrop-blur-sm text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg flex items-center gap-1 badge hazir';
                            badge.innerHTML = '<span class="w-2 h-2 rounded-full bg-white animate-pulse"></span> HazÄ±r';
                        }
                    }
                }
            } else {
                const m = Math.floor(seconds / 60);
                const s = seconds % 60;
                el.querySelector('.time-display').innerText = `${m}dk ${s}sn`;
            }
        }
    });
}, 1000);
</script>
